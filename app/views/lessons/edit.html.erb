<% content_for(:title, "Edit a Lesson | Kite Academy") %>

<%= render('layouts/errors', :object => @lesson) %>

<h2>Edit "<%= @lesson.name %>" Lesson</h2>

<form action="/lessons/<%= @lesson.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render('lessons/form') %>
  <button>Edit Lesson</button>
</form>

