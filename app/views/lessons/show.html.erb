<% content_for(:title, "#{@lesson.name} | Kite Academy") %>

<h2><%= @lesson.name %></h2>

<p id="lesson_content"><%= @lesson.content %></p>


<% if @lesson.previous %>
  <p>
    <% @previous_lesson = @lesson.previous %>
      <a href="<%= @previous_lesson.id %>">
        <button class="btn btn-warning btn-lg">Previous Lesson</button>
      </a>
  <% end %>

  <% if @lesson.next %>
    <% @next_lesson = @lesson.next %>
      <a href="<%= @next_lesson.id %>">
        <button class="btn btn-warning btn-lg">Next Lesson</button>
      </a>
  </p>
<% end %>

<p>
  <a href="/lessons/<%= @lesson.id %>/edit">
    <button class="btn btn-default btn-lg">Edit Lesson</button>
  </a>
  <a href="/lessons/<%= @lesson.id %>/destroy" data-confirm="Are you sure?" data-method="delete" rel="nofollow">
    <button class="btn btn-danger btn-lg">Delete Lesson</button>
  </a>
</p>

<%= render('layouts/home') %>
