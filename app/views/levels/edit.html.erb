<% content_for(:title, "Edit a Level | Kite Academy") %>

<%= render('layouts/errors', :object => @level) %>

<h1>Edit "<%= @level.name %>" level</h1>

<form action="/levels/<%= @level.id %>" method="post">
  <input name="_method" type="hidden" value="patch">
  <%= render('levels/form') %>
  <button>Edit Level</button>
</form>

<p><a href="levels">Home</a></p>
